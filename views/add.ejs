              <label class="col-md-4">Password</label>
              <input type="password" class="form-control" name="password"/>
              </div>
              <div class="form-group">
                <button type="submit" class="btn btn-primary">Register</button>
              </div>
          </form>
        </div>
      </div>
    </div>
  </body>
